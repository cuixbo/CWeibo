<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/tv_public_weibo_profile_image"
            android:layout_width="50px"
            android:layout_height="50px" 
            android:scaleType="fitXY"
            android:src="@drawable/pic_bg_03"
            android:background="@drawable/pic_default"
            />

        <TextView
            android:id="@+id/tv_public_weibo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="微博用户名"
            android:textColor="#333333"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_public_weibo_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="微博内容"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_public_weibo_created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="n分钟前"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_public_weibo_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="来自**客户端"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_public_weibo_reposts_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="转发(n)"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_public_weibo_comments_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="评论(n))"
            android:textColor="#333333" />
    </LinearLayout>

</LinearLayout>