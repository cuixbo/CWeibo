<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_weibo_detail_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#eeeeee"
            android:src="@drawable/pic_bg_06" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_weibo_detail_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="微博用户名"
            android:textColor="#333333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_weibo_detail_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:text="微博内容"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_weibo_detail_created_at"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="left"
                android:text="n分钟前"
                android:textColor="#333333"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_weibo_detail_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="来自**客户端"
                android:textColor="#333333"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_weibo_detail_reposts_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="转发(n)"
                android:textColor="#333333"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_weibo_detail_comments_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="right"
                android:text="评论(n))"
                android:textColor="#333333"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>